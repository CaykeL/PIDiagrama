<?xml version="1.0" encoding="UTF-8"?>
<projeto>
    <classes>

        <classe nome="Pessoa">
            <atributos>
                <atributo nome="cpf" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o cpf"/>
                <atributo nome="nome" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o nome completo"/>
                <atributo nome="email" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o email"/>
            </atributos>

            <metodos>
                <metodo nome="exibirDados" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Exibir os dados (cpf, nome, email) da pessoa"/>
                <metodo nome="atualizarEmail" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String novoEmail" responsabilidade="Atualizar o email"/>
                <metodo nome="setCpf" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String cpf" responsabilidade="Alterar o cpf da pessoa"/>
                <metodo nome="getCpf" tipoRetorno="String" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Obter o cpf da pessoa"/>
                <metodo nome="setEmail" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String email" responsabilidade="Alterar o email da pessoa"/>
                <metodo nome="getEmail" tipoRetorno="String" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Obter o email da pessoa"/>
            </metodos>
        </classe>

        <classe nome="Aluno" herdaDe="Pessoa">
            <atributos>
                <atributo nome="endereco" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o endereço do aluno"/>
                <atributo nome="instituicaoEnsino" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a instituição de ensino do aluno"/>
            </atributos>

            <metodos>
                <metodo nome="atualizarEndereco" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String novoEndereco" responsabilidade="Atualizar o endereço do aluno"/>
                <metodo nome="atualizarInstituicao" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String novaInstituicao" responsabilidade="Atualizar a instituição do aluno"/>
                <metodo nome="confirmarPresenca" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Confirmar a presença do aluno"/>
            </metodos>
        </classe>

        <classe nome="ListaPresenca">
            <atributos>
                <atributo nome="nomeDoAluno" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o nome do aluno na lista"/>
                <atributo nome="presenca" tipo="Boolean" visibilidade="Publica" responsabilidade="Armazenar se o aluno estará presente"/>
            </atributos>

            <metodos>
                <metodo nome="registrarPresenca" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String nomeAluno" responsabilidade="Registrar a presença do aluno"/>
                <metodo nome="gerarRelatorio" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Gerar o relatório da lista de presença"/>
            </metodos>
        </classe>

        <classe nome="Usuario">
            <atributos>
                <atributo nome="login" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o login do usuário"/>
                <atributo nome="senha" tipo="String" visibilidade="Privado" responsabilidade="Armazenar a senha do usuário"/>
            </atributos>

            <metodos>
                <metodo nome="autenticar" tipoRetorno="boolean" visibilidade="Publica" parametrosEntrada="String login, String senha" responsabilidade="Autenticar o login e senha do usuário"/>
                <metodo nome="alterarSenha" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String novaSenha" responsabilidade="Alterar a senha do usuário"/>
                <metodo nome="setLogin" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String login" responsabilidade="Alterar o login do usuário"/>
                <metodo nome="getLogin" tipoRetorno="String" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Obter o login do usuário"/>
                <metodo nome="setSenha" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String senha" responsabilidade="Alterar a senha do usuário"/>
                <metodo nome="getSenha" tipoRetorno="String" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Obter a senha do usuário"/>
            </metodos>
        </classe>

        <classe nome="Funcionario" herdaDe="Pessoa">
            <atributos>
                <atributo nome="cargo" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o cargo do funcionário"/>
            </atributos>

            <metodos>
                <metodo nome="registrarAluno" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String nomeAluno" responsabilidade="Registrar o aluno no sistema"/>
                <metodo nome="gerenciarRota" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String rota" responsabilidade="Gerenciar a rota"/>
            </metodos>
        </classe>

        <classe nome="Motorista" herdaDe="Pessoa">
            <atributos>
                <atributo nome="cnh" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a CNH do motorista"/>
                <atributo nome="rota" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a rota"/>
            </atributos>

            <metodos>
                <metodo nome="iniciarRota" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Iniciar a rota até a instituição de ensino"/>
                <metodo nome="finalizarRota" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Finalizar a rota"/>
                <metodo nome="confirmarEmbarque" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String nomeAluno" responsabilidade="Confirmar o embarque do aluno"/>
            </metodos>
        </classe>

        <classe nome="Perfil">
            <atributos>
                <atributo nome="tipoPerfil" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o tipo de perfil"/>
                <atributo nome="permissoes" tipo="List&lt;String&gt;" visibilidade="Publica" responsabilidade="Armazenar as permissões dos perfis"/>
            </atributos>

            <metodos>
                <metodo nome="atribuirPermissao" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="String acao" responsabilidade="Atribuir permissões no sistema para o perfil"/>
                <metodo nome="listarPermissoes" tipoRetorno="void" visibilidade="Publica" parametrosEntrada="N/A" responsabilidade="Listar as permissões do perfil"/>
            </metodos>
        </classe>

    </classes>

    <relacoes>
        <heranca subclasse="Aluno" superclasse="Pessoa"/>
        <heranca subclasse="Funcionario" superclasse="Pessoa"/>
        <heranca subclasse="Motorista" superclasse="Pessoa"/>

        <agregacao origem="Pessoa" destino="Usuario"/>
        <agregacao origem="Perfil" destino="Usuario"/>
    </relacoes>
</projeto>
