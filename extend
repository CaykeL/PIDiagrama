@startuml DiagramaClassesProjeto

' Estilo para visibilidade
' private: -
' public: +

' Classe Pessoa (Superclasse base)
class Pessoa {
  - cpf : String
  + nome : String
  - email : String
  + endereco : String
}

' Classe Aluno
class Aluno {
  + instituicaoEnsino : String
}

' Classe Funcionario
class Funcionario {
  + cargo : String
}

' Classe Motorista
class Motorista {
  + crh : String
  + rota : String
}

' Classe Usuario
class Usuario {
  - login : String
  - senha : String
}

' Classe ListaPresenca
' Se o aluno está presente na lista, há uma associação
class ListaPresenca {
  + nomeDoAluno : String
  + presenca : Boolean
}

' Classe Perfil
class Perfil {
  + tipoPerfil : String
  + permissoes : List<String>
}

' --- Relações de Herança (Generalização) ---

' Aluno é um tipo de Pessoa
Pessoa <|-- Aluno

' Funcionario é um tipo de Pessoa
Pessoa <|-- Funcionario

' Motorista é um tipo de Funcionario
Funcionario <|-- Motorista

' --- Relações de Associação Comuns ---

' Um Usuário pode ter um Perfil (Associação 1 para 1)
Usuario "1" -- "1" Perfil : tem

' Uma ListaPresenca pode estar associada a um Aluno
Aluno "1" -- "0..*" ListaPresenca : está associado a

@enduml
