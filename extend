<?xml version="1.0" encoding="UTF-8"?>
<projeto nome="Gestão de Usuários e Rota">
    <classe nome="Pessoa">
        <atributos>
            <atributo nome="cpf" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o cpf"/>
            <atributo nome="nome" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o nome completo"/>
            <atributo nome="email" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o email"/>
            <atributo nome="endereco" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o endereço do aluno"/>
        </atributos>
        <metodos>
            <metodo nome="exibirDados" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Exibir os dados (cpf, nome, email) da pessoa"/>
            <metodo nome="atualizarEmail" retorno="void" visibilidade="Publica" parametros="String novoEmail" responsabilidade="Atualizar o email"/>
            <metodo nome="setCpf" retorno="void" visibilidade="Publica" parametros="String cpf" responsabilidade="Alterar o cpf da Pessoa"/>
            <metodo nome="getCpf" retorno="String" visibilidade="Publica" parametros="N/A" responsabilidade="Obter o cpf da Pessoa"/>
            <metodo nome="setEmail" retorno="void" visibilidade="Publica" parametros="String email" responsabilidade="Alterar o email da Pessoa"/>
            <metodo nome="getEmail" retorno="String" visibilidade="Publica" parametros="N/A" responsabilidade="Obter o email da Pessoa"/>
            <metodo nome="atualizarEndereco" retorno="void" visibilidade="Publica" parametros="String novoEndereco" responsabilidade="Atualizar o endereço do aluno"/>
        </metodos>
    </classe>

    <classe nome="Aluno" herda="Pessoa">
        <atributos>
            <atributo nome="instituicaoEnsino" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a Instituição de Ensino do aluno"/>
        </atributos>
        <metodos>
            <metodo nome="atualizarInstituicao" retorno="void" visibilidade="Publica" parametros="String novaInstituicao" responsabilidade="Atualizar a instituição do aluno"/>
        </metodos>
    </classe>

    <classe nome="ListaPresenca">
        <atributos>
            <atributo nome="nomeDoAluno" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o nome do aluno na lista"/>
            <atributo nome="presenca" tipo="Boolean" visibilidade="Publica" responsabilidade="Armazenar se o aluno estará presente"/>
        </atributos>
        <metodos>
            <metodo nome="confirmarPresenca" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Confirmar a presença do aluno"/>
            <metodo nome="registrarPresenca" retorno="void" visibilidade="Publica" parametros="String nomeAluno" responsabilidade="Registrar a presença do aluno"/>
            <metodo nome="gerarRelatorio" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Gerar o relatório da lista de presença"/>
        </metodos>
    </classe>

    <classe nome="Usuario">
        <atributos>
            <atributo nome="login" tipo="String" visibilidade="Privado" responsabilidade="Armazenar o login do usuário"/>
            <atributo nome="senha" tipo="String" visibilidade="Privado" responsabilidade="Armazenar a senha do usuário"/>
        </atributos>
        <metodos>
            <metodo nome="autenticar" retorno="boolean" visibilidade="Publica" parametros="String login, String senha" responsabilidade="Autenticar login e senha do usuário"/>
            <metodo nome="alterarSenha" retorno="void" visibilidade="Publica" parametros="String novaSenha" responsabilidade="Alterar a senha do usuário"/>
            <metodo nome="setLogin" retorno="void" visibilidade="Publica" parametros="String login" responsabilidade="Alterar o login do usuário"/>
            <metodo nome="getLogin" retorno="String" visibilidade="Publica" parametros="N/A" responsabilidade="Obter o login do usuário"/>
            <metodo nome="setSenha" retorno="void" visibilidade="Publica" parametros="String senha" responsabilidade="Alterar a senha do usuário"/>
            <metodo nome="getSenha" retorno="String" visibilidade="Publica" parametros="N/A" responsabilidade="Obter a senha do usuário"/>
        </metodos>
    </classe>

    <classe nome="Funcionario" herda="Usuario">
        <atributos>
            <atributo nome="cargo" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o cargo do funcionário"/>
        </atributos>
        <metodos>
            <metodo nome="registrarAluno" retorno="void" visibilidade="Publica" parametros="String nomeAluno" responsabilidade="Registrar o Aluno no sistema"/>
            <metodo nome="gerenciarRota" retorno="void" visibilidade="Publica" parametros="String rota" responsabilidade="Gerenciar a rota"/>
        </metodos>
    </classe>

    <classe nome="Motorista" herda="Funcionario">
        <atributos>
            <atributo nome="crnh" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a crnh do motorista"/>
            <atributo nome="rota" tipo="String" visibilidade="Publica" responsabilidade="Armazenar a rota"/>
        </atributos>
        <metodos>
            <metodo nome="iniciarRota" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Iniciar a rota até a instituição de ensino"/>
            <metodo nome="finalizarRota" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Finalizar a rota"/>
            <metodo nome="confirmarEmbarque" retorno="void" visibilidade="Publica" parametros="String nomeAluno" responsabilidade="Confirmar o embarque do aluno"/>
        </metodos>
    </classe>

    <classe nome="Perfil">
        <atributos>
            <atributo nome="tipoPerfil" tipo="String" visibilidade="Publica" responsabilidade="Armazenar o tipo do perfil"/>
            <atributo nome="permissoes" tipo="List&lt;String&gt;" visibilidade="Publica" responsabilidade="Armazenar as permissões dos perfis"/>
        </atributos>
        <metodos>
            <metodo nome="atribuirPermissao" retorno="void" visibilidade="Publica" parametros="String acao" responsabilidade="Atribuir permissões para o sistema para o perfil"/>
            <metodo nome="listarPermissoes" retorno="void" visibilidade="Publica" parametros="N/A" responsabilidade="Listar as permissões do perfil"/>
        </metodos>
    </classe>
</projeto>
```
