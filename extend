<?xml version="1.0" encoding="UTF-8"?>
<!-- Modelo de domínio baseado no diagrama fornecido -->
<projeto nome="SistemaEscola" versao="1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <descricao>Modelo de classes com herança e agregações</descricao>

  <classes>
    <!-- Classe base -->
    <classe nome="Pessoa">
      <atributo nome="cpf" tipo="String" visibilidade="Privado">
        <responsabilidade>Armazenar o cpf</responsabilidade>
      </atributo>
      <atributo nome="nome" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar o nome completo</responsabilidade>
      </atributo>
      <atributo nome="email" tipo="String" visibilidade="Privado">
        <responsabilidade>Armazenar o email</responsabilidade>
      </atributo>
    </classe>

    <!-- Subclasses -->
    <classe nome="Aluno" estende="Pessoa">
      <atributo nome="endereco" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar o endereço do aluno</responsabilidade>
      </atributo>
      <atributo nome="instituicaoEnsino" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar a Instituição de Ensino do aluno</responsabilidade>
      </atributo>
    </classe>

    <classe nome="Funcionario" estende="Pessoa">
      <atributo nome="cargo" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar o cargo do funcionario</responsabilidade>
      </atributo>
    </classe>

    <classe nome="Motorista" estende="Pessoa">
      <atributo nome="cnh" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar a cnh do motorista</responsabilidade>
      </atributo>
      <atributo nome="rota" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar a rota</responsabilidade>
      </atributo>
    </classe>

    <classe nome="ListaPresenca">
      <atributo nome="nomeDoAluno" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar o nome do aluno na lista</responsabilidade>
      </atributo>
      <atributo nome="presenca" tipo="Boolean" visibilidade="Publica">
        <responsabilidade>Armazenar se o aluno estará presente</responsabilidade>
      </atributo>
    </classe>

    <classe nome="Usuario">
      <atributo nome="login" tipo="String" visibilidade="Privado">
        <responsabilidade>Armazenar o login do usuario</responsabilidade>
      </atributo>
      <atributo nome="senha" tipo="String" visibilidade="Privado">
        <responsabilidade>Armazenar a senha do usuario</responsabilidade>
      </atributo>
    </classe>

    <classe nome="Perfil">
      <atributo nome="tipoPerfil" tipo="String" visibilidade="Publica">
        <responsabilidade>Armazenar o tipo do perfil</responsabilidade>
      </atributo>
      <atributo nome="permissoes" tipo="List&lt;String&gt;" visibilidade="Publica">
        <responsabilidade>Armazenar as permissões dos perfis</responsabilidade>
      </atributo>
    </classe>
  </classes>

  <!-- RELACIONAMENTOS -->
  <relacionamentos>

    <!-- Herança -->
    <relacao de="Aluno" para="Pessoa" tipo="heranca" comentario="Aluno herda Pessoa"/>
    <relacao de="Funcionario" para="Pessoa" tipo="heranca" comentario="Funcionario herda Pessoa"/>
    <relacao de="Motorista" para="Pessoa" tipo="heranca" comentario="Motorista herda Pessoa"/>

    <!-- Agregações -->
    <relacao de="Pessoa" para="Usuario" tipo="agregacao" comentario="Pessoa possui um Usuario"/>
    <relacao de="Usuario" para="Perfil" tipo="agregacao" comentario="Usuario possui um Perfil"/>
    
  </relacionamentos>

</projeto>
